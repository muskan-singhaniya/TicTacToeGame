<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/board"
        android:columnCount="3"
        android:rowCount="3">

        <ImageView
            android:id="@+id/counter1"
            android:layout_width="119dp"
            android:layout_height="116dp"
            android:layout_row="0"
            android:layout_column="0"
            android:tag="1"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            tools:src="@drawable/red" />

        <ImageView
            android:id="@+id/counter2"
            android:layout_width="119dp"
            android:layout_height="116dp"
            android:layout_row="0"
            android:layout_column="1"
            android:tag="2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            tools:src="@drawable/red" />

        <ImageView
            android:id="@+id/counter3"
            android:layout_width="119dp"
            android:layout_height="116dp"
            android:layout_row="0"
            android:layout_column="2"
            android:tag="3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            tools:src="@drawable/red" />

        <ImageView
            android:id="@+id/counter4"
            android:layout_width="119dp"
            android:layout_height="116dp"
            android:layout_row="1"
            android:layout_column="0"
            android:tag="4"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="18dp"
            tools:src="@drawable/red" />

        <ImageView
            android:id="@+id/counter5"
            android:layout_width="119dp"
            android:layout_height="116dp"
            android:layout_row="1"
            android:layout_column="1"
            android:tag="5"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            tools:src="@drawable/red" />

        <ImageView
            android:id="@+id/counter6"
            android:layout_width="119dp"
            android:layout_height="116dp"
            android:layout_row="1"
            android:layout_column="2"
            android:tag="6"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            tools:src="@drawable/red" />

        <ImageView
            android:id="@+id/counter7"
            android:layout_width="119dp"
            android:layout_height="116dp"
            android:layout_row="2"
            android:tag="7"
            android:layout_column="0"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="25dp"
            tools:src="@drawable/red" />

        <ImageView
            android:id="@+id/counter8"
            android:layout_width="119dp"
            android:layout_height="116dp"
            android:layout_row="2"
            android:layout_column="1"
            android:tag="8"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            tools:src="@drawable/red" />

        <ImageView
            android:id="@+id/counter9"
            android:layout_width="119dp"
            android:layout_height="116dp"
            android:layout_row="2"
            android:layout_column="2"
            android:tag="9"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            tools:src="@drawable/red" />


    </GridLayout>

    <Button
        android:id="@+id/play_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:backgroundTint="#000"
        android:text="START NEW!"
        android:textSize="20sp"
        android:textColor="#FF0"



        />
</LinearLayout>